<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:padding="0dp"
    android:id="@+id/bloodType"
    android:background="#FEFEFE" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_height"
        android:id="@+id/rowInfo"
        android:gravity="center"
    >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select A level"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:shadowColor="#CCCECECE"
            android:textSize="@dimen/info_text"
          />
       

	</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rowOne"
        android:layout_weight="1">

       <Button
            android:id="@+id/btnA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
             />

        <Button
            android:id="@+id/btnB"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 2"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
           />

      <Button
            android:id="@+id/btnC"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 3"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rowTwo"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnD"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 4"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
           />
       <Button
            android:id="@+id/btnE"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
         />

       <Button
            android:id="@+id/btnF"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 6"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
         />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rowThree"
        android:layout_weight="1">

     <Button
            android:id="@+id/btnG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 7"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
          />
      <Button
            android:id="@+id/btnH"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#800080"
            android:shadowColor="#800080"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="15"
            android:text="Level 8"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
           />
    </LinearLayout>
</LinearLayout>